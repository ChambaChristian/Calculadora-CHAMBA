<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="CALCULADORA BASICA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="54.0dp"
        android:textStyle="bold|italic"
        android:textSize="26dp"
        android:textAlignment="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resul"
        android:layout_marginTop="36.0dp"
        android:layout_gravity="right"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textAlignment="textEnd" />
    <TextView
        android:text="INGRESE SU VALOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="42.5dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="19dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5">
        <EditText
            android:inputType="number"
            android:layout_width="57.0dp"
            android:layout_height="match_parent"
            android:id="@+id/num1"
            android:textStyle="normal"
            android:textSize="16dp"
            android:layout_marginLeft="61.0dp"
            android:textAlignment="center" />
        <EditText
            android:inputType="number"
            android:layout_width="57.0dp"
            android:layout_height="match_parent"
            android:id="@+id/num2"
            android:textStyle="normal"
            android:textSize="16dp"
            android:layout_marginLeft="110.0dp"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <Button
            android:text="+"
            android:layout_width="123.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnsumar"
            android:layout_marginRight="3.5dp"
            android:layout_marginLeft="26.0dp"
            android:textSize="18dp"
            android:background="@android:color/holo_red_dark"
            app:backgroundTint="@android:color/holo_red_dark" />
        <Button
            android:text="-"
            android:layout_width="127.5dp"
            android:layout_height="match_parent"
            android:id="@+id/btnrestar"
            android:layout_marginRight="0.0dp"
            android:layout_marginLeft="39.5dp"
            android:textSize="18dp"
            app:backgroundTint="@android:color/holo_green_dark" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <Button
            android:text="*"
            android:layout_width="121.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnmulti"
            android:layout_marginLeft="25.5dp"
            android:textSize="18dp"
            app:backgroundTint="@android:color/black" />
        <Button
            android:text="/"
            android:layout_width="128.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btndiv"
            android:layout_marginLeft="45.0dp"
            android:textSize="18dp"
            app:backgroundTint="@android:color/holo_blue_dark" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4">
        <Button
            android:text="^"
            android:layout_width="125.5dp"
            android:layout_height="match_parent"
            android:id="@+id/button1"
            android:layout_marginLeft="23.0dp"
            android:textSize="18dp"
            app:backgroundTint="@android:color/holo_red_light" />
        
        <Button
            android:text="âˆš"
            android:layout_width="125.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnraiz"
            android:layout_marginLeft="48.5dp"
            android:textSize="18dp"
            app:backgroundTint="@color/abc_search_url_text_normal" />
    </LinearLayout>
</LinearLayout>